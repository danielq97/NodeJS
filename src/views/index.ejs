<% include partials/_header %>


<div class="container">
    <div class="row">
        <!--Form-->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <p>Firstname</p>
                        <div class="form-group">
                            <input type="text" name="name.firstname" placeholder="Insert a firstname"
                                class="form-control">
                        </div>
                        <p>Lastname</p>
                        <div class="form-group">
                            <input type="text" name="name.lastname" placeholder="Insert a lastname"
                                class="form-control">
                        </div>
                        <p>Username</p>
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Insert a username" class="form-control">
                        </div>
                        <p>Type of identification</p>
                        <div class="form-group">
                            <input type="text" name="identification.type1" placeholder="Insert a type"
                                class="form-control">
                        </div>
                        <p>Number of identification</p>
                        <div class="form-group">
                            <input type="text" name="identification.number"
                                placeholder="Insert number of identification" class="form-control">
                        </div>
                        <p>Password</p>
                        <div class="form-group">
                            <input type="password" name="password"
                                placeholder="Insert password" class="form-control">
                        </div>
                        <p>Photo (URL)</p>
                        <div class="form-group">
                        <input type="text" name="foto" class="form-control">
                    </div>
                        <button type="submit" class="btn btn-primary btn-block">Add</button>


                    </form>
                </div>
            </div>
        </div>
        <!-- List -->
        <div class="col-md-8">
            <table class="table table-bordered table-hover">
                <thead>
                    <th>NÂ°</th>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Identification</th>
                    <th>Foto</th>
                    <th>Operaciones</th>

                </thead>
                <tbody>
                    <% for(var i=0; i<users.length; i++) {%>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= users[i].name.firstname + " " + users[i].name.lastname %></td>
                        <td><%= users[i].username %></td>
                        <td><%= users[i].identification.type1 + " " + users[i].identification.number %></td>
                        <td><img src="<%= users[i].foto %>" width="100" height="100" ></img></td>
                        <td>
                            <a href="/turn/<%= users[i]._id %>" class="btn <%= users[i].active ? 'btn-success' : 'btn-dark' %>">Active</a>
                            <a href="/delete/<%= users[i]._id %>" class="btn btn-danger">Delete</a>
                            <a href="/edit/<%= users[i]._id %>" class="btn btn-info">Edit</a>
                        </td>

                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<% include partials/_footer %>